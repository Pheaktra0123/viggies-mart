<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardCornerRadius="15dp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_shadow"
        android:elevation="5dp"
        >
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/image_banner"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="viewStart"
            android:padding="10dp"
            android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit."
            android:ellipsize="end"
            android:maxLines="2"
            tools:ignore="HardcodedText,SmallSp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/product_price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:text="2$/KG"
                tools:ignore="HardcodedText,SmallSp" />
            <ImageButton
                android:id="@+id/add_to_cart_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_card"
                android:contentDescription="@string/todo1"
                android:src="@drawable/shopping_bag_24px" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>